(define defstruct-gen-defprod-members ((tag symbolp) (members string-type-alistp))
  :returns (list true-listp)
  :short "Generate the @(tsee fty::defprod) members for the structure."
  :long
  (xdoc::topstring
   (xdoc::p
    "This generates the list of members that goes into the @(tsee fty::defprod),
      which is a list of doublets
      whose first components are symbols that name the members
      and whose second components are symbols that name fixtypes.
      (These second components may be more general in @(tsee fty::defprod),
      but for @(tsee defstruct) we only need fixtype names there.)")
   (xdoc::p
    "Each member name is put in the package of the tag.")
   (xdoc::p
    "The types are all expected to be integers,
     because of the checks done
     when processing the inputs of @(tsee defstruct)."))
  (b* (((when (endp members)) nil)
       ((cons name type) (car members))
       ((unless (type-integerp type))
        (raise "Internal error: ~
                the type ~x0 of member ~x1 of structure ~x2 ~
                is not an integer type."
               type name tag))
       (defprod-member-name (intern-in-package-of-symbol name tag))
       (defprod-member-type (integer-type-to-fixtype type))
       (defprod-member (list defprod-member-name
                            defprod-member-type))
       (defprod-members (defstruct-gen-defprod-members tag (cdr members))))
    (cons defprod-member defprod-members)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(define defstruct-gen-defprod ((tag symbolp) (members string-type-alistp))
  :returns (event pseudo-event-formp)
  :short "Generate the @(tsee fty::defprod) for the structure."
  :long
  (xdoc::topstring
   (xdoc::p
    "The name of the fixtype is the tag preceded by @('struct-'),
     in the same package as the tag.")
   (xdoc::p
    "The members are as explained in @(tsee defstruct-gen-defprod-members).")
   (xdoc::p
    "The predicate is the fixtype name with @('-p') after it,
     which is the default for @(tsee fty::defprod).")
   (xdoc::p
    "We also tag the structure with a keyword whose name
     is the same as the structure tag."))
  (b* ((defprod-name (packn-pos (list 'struct- tag) tag))
       (defprod-members (defstruct-gen-defprod-members tag members))
       (defprod-tag (intern (symbol-name defprod-name) "KEYWORD")))
    `(fty::defprod ,defprod-name
       ,defprod-members
       :tag ,defprod-tag)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(define defstruct-gen-readers/writers ((tag symbolp) (members string-type-alistp))
  :returns (events pseudo-event-form-listp)
  :short "Generate the functions to read and write structure members."
  :long
  (xdoc::topstring
   (xdoc::p
    "The function names have the form described in @(see shallow-structures),
     in the same package as the tag."))
  (b* (((when (endp members)) nil)
       ((cons name type) (car members))
       (struct-tag (packn-pos (list 'struct- tag) tag))
       (struct-tag-p (packn-pos (list struct-tag '-p) tag))
       (struct-tag->name (packn-pos (list struct-tag '-> name) tag))
       (change-struct-tag (packn-pos (list 'change- struct-tag) tag))
       (struct-tag-read-name (packn-pos (list struct-tag '-read- name) tag))
       (struct-tag-write-name (packn-pos (list struct-tag '-write- name) tag))
       ((unless (type-integerp type))
        (raise "Internal error: ~
                the type ~x0 of member ~x1 of structure ~x2 ~
                is not an integer type."
               type name tag))
       (typep (pack (integer-type-to-fixtype type) 'p))
       (member-keyword (intern name "KEYWORD"))
       (struct-var tag)
       (new-struct-var (packn-pos (list struct-var '-new) tag))
       (member-var (intern-in-package-of-symbol name tag))
       (reader `(define ,struct-tag-read-name ((,struct-var ,struct-tag-p))
                  :returns (,member-var ,typep)
                  (,struct-tag->name ,struct-var)
                  :hooks (:fix)))
       (writer `(define ,struct-tag-write-name ((,struct-var ,struct-tag-p)
                                                (,member-var ,typep))
                  :returns (,new-struct-var ,struct-tag-p)
                  (,change-struct-tag ,struct-var ,member-keyword ,member-var)
                  :hooks (:fix)))
       (more-readers/writers (defstruct-gen-readers/writers tag (cdr members))))
    (list* reader writer more-readers/writers)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(define defstruct-gen-everything ((tag symbolp)
                                  (members string-type-alistp)
                                  (call pseudo-event-formp))
  :returns (event pseudo-event-formp)
  :short "Generate all the events."
  :long
  (xdoc::topstring
   (xdoc::p
    "These are the @(tsee fty::defprod),
     the readers and writers,
     and the table event."))
  (b* ((defprod-event (defstruct-gen-defprod tag members))
       (readers/writers-events (defstruct-gen-readers/writers tag members))
       (info (make-defstruct-info :members members :call call))
       (table-event (defstruct-table-record-event tag info)))
    `(progn
       ,defprod-event
       ,@readers/writers-events
       ,table-event)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(define defstruct-fn ((args true-listp)
                      (call pseudo-event-formp)
                      (ctx ctxp)
                      state)
  :returns (mv erp (event pseudo-event-formp) state)
  :short "Process the inputs and generate the events."
  (b* (((mv erp (list tag members redundant) state)
        (defstruct-process-inputs args call ctx state))
       ((when erp) (mv erp '(_) state))
       ((when redundant) (acl2::value '(value-triple :redundant)))
       (event (defstruct-gen-everything tag members call)))
    (acl2::value event)))

